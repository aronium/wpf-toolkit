                                        <ComboBoxItem Content="Editable Item 2" />
                                        <ComboBoxItem Content="Editable Item 3" />
                                        <ComboBoxItem Content="Editable Item 4" />
                                        <ComboBoxItem Content="Editable Item 5" />
                                    </ComboBox>

                                    <ComboBox IsEnabled="False" Margin="0,5" Width="180" HorizontalAlignment="Left">
                                        <ComboBoxItem IsSelected="True" Content="Disabled" />
                                    </ComboBox>

                                    <aronium:TextSeparator FontSize="18" FontFamily="Segoe UI Light" Content="Text separator" />

                                    <ProgressBar Value="40" Maximum="100" Margin="0,10" />

                                    <TreeView BorderThickness="0">
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
                                                <TreeViewItem Header="Child 1.1" />
                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
                                                <TreeViewItem Header="Child 1.1" />
                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
                                                <TreeViewItem Header="Child 1.1" />
                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
                                                <TreeViewItem Header="Child 1.1" />
                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
                                                <TreeViewItem Header="Child 1.1" />
                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
                                                <TreeViewItem Header="Child 1.1" />
                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
                                                <TreeViewItem Header="Child 1.1" />
                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                        <TreeViewItem Header="Root">
                                            <TreeViewItem Header="Child 1">
                                                <TreeViewItem Header="Child 1.1" />
                                            </TreeViewItem>
                                            <TreeViewItem Header="Child 2" />
                                            <TreeViewItem Header="Child 3" />
                                        </TreeViewItem>
                                    </TreeView>

                                </StackPanel>
                                
                            </GroupBox>

                            <GridSplitter ResizeBehavior="PreviousAndNext" ResizeDirection="Columns" Grid.Column="3" />

                            <GroupBox Header="Buttons" Grid.Column="4">
                                <StackPanel>
                                    <WrapPanel Margin="0,10">
                                        <Button Content="Standard button" HorizontalAlignment="Center" Margin="0,5,5,5"/>
                                        <Button Content="Disabled button" IsEnabled="False" HorizontalAlignment="Center" Margin="0,5,5,5"/>
                                        <ToggleButton Content="Toggle button" IsChecked="True" Margin="0,5,5,5" />
                                    </WrapPanel>

                                    <WrapPanel Margin="0,10">
                                        <aronium:ToggleSwitch MetroStyle="False" IsChecked="true" HorizontalAlignment="Center" x:Name="onoff" Margin="0,5,5,5"/>
                                        <aronium:ToggleSwitch MetroStyle="False" Padding="10,0,0,0" Content="Enabled / Disabled" IsChecked="True" HorizontalAlignment="Center" IsEnabled="{Binding ElementName=onoff, Path=IsChecked}"/>
                                    </WrapPanel>

                                    <WrapPanel Margin="0,10">
                                        <aronium:ToggleSwitch MetroStyle="True" IsChecked="true" HorizontalAlignment="Center" Margin="0,5,5,5" x:Name="metroOnOff" />
                                        <aronium:ToggleSwitch MetroStyle="True" Padding="10,0,0,0" IsChecked="true" HorizontalAlignment="Center" Margin="0,5,5,5" IsEnabled="{Binding ElementName=metroOnOff, Path=IsChecked}" Content="Enabled / Disabled"/>
                                    </WrapPanel>

                                    <aronium:ToggleSwitch MetroStyle="True" HorizontalAlignment="Left" Background="Firebrick" BackgroundChecked="{StaticResource Accent}"/>

                                    <Label IsEnabled="False" Content="Button group" />

                                    <aronium:ButtonGroup HorizontalAlignment="Left" Orientation="Horizontal">
                                        <Button Content="Group button 1"/>
                                        <aronium:DropDownButton Content="Drop down">
                                            <aronium:DropDownButton.DropDown>
                                                <ContextMenu>
                                                    <MenuItem Header="One" />
                                                    <MenuItem Header="Two" />
                                                    <MenuItem Header="Three" />
                                                </ContextMenu>
                                            </aronium:DropDownButton.DropDown>
                                        </aronium:DropDownButton>
                                        <Button Content="Group button 3" IsEnabled="{Binding ElementName=onoff, Path=IsChecked}"/>
                                        <Button Content="Group button 4"/>
                                    </aronium:ButtonGroup>

