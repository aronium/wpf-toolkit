                </TabItem>
                <TabItem Header="Tab item 2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--GridSplitter demo-->
                        <Grid Width="120" Height="120" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.Resources>
                                <DrawingBrush x:Key="DottedBrush" Viewport="0,0,4,4" ViewportUnits="Absolute" TileMode="Tile">
                                    <DrawingBrush.Drawing>
                                        <DrawingGroup>
                                            <GeometryDrawing Brush="{DynamicResource BorderBrush}">
                                                <GeometryDrawing.Geometry>
                                                    <GeometryGroup>
                                                        <RectangleGeometry Rect="0,0,50,50" />
                                                        <RectangleGeometry Rect="50,50,50,50" />
                                                    </GeometryGroup>
                                                </GeometryDrawing.Geometry>
                                            </GeometryDrawing>
                                        </DrawingGroup>
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Grid Splitter Demo" />
                                    <Setter Property="TextWrapping" Value="Wrap" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="TextAlignment" Value="Center" />
                                    <!--<Setter Property="Foreground" Value="{DynamicResource Foreground}" />-->
                                </Style>
                            </Grid.Resources>

                            <Border BorderThickness="1" SnapsToDevicePixels="True" BorderBrush="{StaticResource DottedBrush}">
                                <TextBlock Text="1"/>
                            </Border>
                            <GridSplitter Grid.Row="0" Grid.Column="1" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>
                            <GridSplitter Grid.Row="1" Grid.ColumnSpan="3" ResizeBehavior="PreviousAndNext" ResizeDirection="Rows"/>
                            <Border BorderThickness="1" SnapsToDevicePixels="True" BorderBrush="{StaticResource DottedBrush}" Grid.Row="2">
                                <TextBlock Text="3"/>
                            </Border>

                            <Border BorderThickness="1" SnapsToDevicePixels="True" Grid.Column="2" BorderBrush="{StaticResource DottedBrush}">
                                <TextBlock Text="2"/>
                            </Border>
                            <GridSplitter Grid.Row="2" Grid.Column="1" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>
                            <Border BorderThickness="1" SnapsToDevicePixels="True" Grid.Row="2" Grid.Column="2" BorderBrush="{StaticResource DottedBrush}">
                                <TextBlock Text="4"/>
                            </Border>

                        </Grid>

                        <StackPanel Grid.Column="1" Margin="5,5,5,20">
                            <WrapPanel>
                                <CheckBox Content="CheckBox" IsChecked="True" Margin="5"/>
                                <CheckBox Content="CheckBox" IsThreeState="True" IsChecked="{x:Null}" Margin="5"/>
                                <CheckBox Content="CheckBox" IsThreeState="True" IsEnabled="False" IsChecked="{x:Null}" Margin="5"/>
                                <CheckBox Content="CheckBox" IsEnabled="False" Margin="5"/>
                                <CheckBox Content="CheckBox" IsChecked="True" IsEnabled="False" Margin="5"/>

                                <RadioButton Content="CheckBox" IsChecked="True" Margin="5"/>
                                <RadioButton Content="CheckBox" IsThreeState="True" IsChecked="{x:Null}" Margin="5"/>
                                <RadioButton Content="CheckBox" IsEnabled="False" Margin="5"/>
                            </WrapPanel>

                            <aronium:Rating Stars="10" Margin="0,20" StarSize="20"/>
                            <aronium:Rating Margin="0" StarBrush="{StaticResource Accent}"/>
                        </StackPanel>

                        <Viewbox Height="300" Grid.Row="1" >
                            <Calendar HorizontalAlignment="Left" Margin="5" PreviewMouseUp="OnCalendarPreviewMouseDown"/>
                        </Viewbox>

                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1" Orientation="Horizontal" Grid.Column="1">
                            <TextBox Width="200" Margin="5"/>
                            <DatePicker Width="200" />
                            <DatePicker Margin="5" IsEnabled="False" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200"  />
                        </StackPanel>


                    </Grid>
                </TabItem>
                <TabItem Header="Data grid">
                    <DataGrid ItemsSource="{Binding Users}" LoadingRow="OnDataGridLoadingRow" CanUserResizeRows="False" RowHeaderWidth="30" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" />
                </TabItem>
                <TabItem Header="Closable Tab Control">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Style="{DynamicResource Title}" Text="Closable tab control example" Margin="0,0,0,10"/>

                        <aronium:ClosableTabControl AllowItemsReorder="True" x:Name="closableTabControl" Grid.Row="1">

                            <aronium:ClosableTabControl.Header>
                                <TextBlock Text="Tab Control Header" Style="{StaticResource Heading1}" VerticalAlignment="Center" Margin="0,0,10,0" />
                            </aronium:ClosableTabControl.Header>
                            
                            <aronium:ClosableTabItem CanClose="False" Header="CanClose: False">
                                <Button Content="Add tab item" Click="OnAddTabItem" VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
                            </aronium:ClosableTabItem>
                            <aronium:ClosableTabItem CanClose="True" Title="Custom title">
                                <aronium:ClosableTabItem.Header>
                                    <TextBlock Text="TextBlock as Header" />
                                </aronium:ClosableTabItem.Header>
                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type aronium:ClosableTabItem}}, Path=Header}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                            </aronium:ClosableTabItem>
                            <aronium:ClosableTabItem Header="Closable item 2" CanClose="True">
                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type aronium:ClosableTabItem}}, Path=Header}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                            </aronium:ClosableTabItem>
                            <aronium:ClosableTabItem Header="Closable item 3" CanClose="True">
                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type aronium:ClosableTabItem}}, Path=Header}" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                            </aronium:ClosableTabItem>
                        </aronium:ClosableTabControl>

                    </Grid>
                </TabItem>
                <TabItem Header="Flyout">
                    <Grid VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Button Click="ShowFlyout" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="150" Content="Show Flyout" />
                        <aronium:ToggleSwitch IsChecked="{Binding ElementName=flyout, Path=IsOpen}" Content="Is flyout open" Padding="5,0,0,0" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0" />
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <aronium:Flyout Grid.RowSpan="2" x:Name="flyout" Title="Flyout Title" Visibility="Collapsed">
            <aronium:Flyout.Content>
                <TextBlock Text="Flyout Content..." VerticalAlignment="Center" HorizontalAlignment="Center" />
            </aronium:Flyout.Content>
        </aronium:Flyout>
    </Grid>
</Window>
